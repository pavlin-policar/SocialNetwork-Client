{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "curly": 2,
    "default-case": 2,
    "dot-notation": 1,
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-fallthrough": 2,
    "no-magic-numbers": 1,
    "quotes": [2, "single"],
    "strict": [2, "never"],

    "brace-style": 2,
    "camelcase": [2, { "properties": "always" }],

    "react/jsx-curly-spacing": 1,
    "react/jsx-quotes": [2, "double"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-direct-mutation-state": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}
